<h1>
    My Lists
    <%= link_to("Add Task List", new_task_list_path, :class => "action") %>
</h1>

<% if flash.any? %>

    <div id="flash">
        <%= flash[:notice] %>
    </div>

<% end %>

<% @task_lists.each do |task_list| %>

    <section class="task-list">
        <h1><%= task_list.name %></h1>

        <div class="actions">
            <ul>
                <li><%= link_to "Edit", edit_task_list_path(task_list) %></li>
                <li>
                    <%= link_to "Add Task",
                                new_task_list_task_path(task_list),
                                :class => "action" %>
                </li>
            </ul>
        </div>

        <div class="tasks">
            <ul>
                <% task_list.tasks.each do |task| %>
                    <li>
                        <%= task.description %>
                        <div class="actions">
                            <%= button_to "Delete",
                                          task_list_task_path(task_list, task),
                                          :method => :delete, :class => "delete" %>
                        </div>
                    </li>
                <% end %>
            </ul>
        </div>
    </section>

<% end %>
